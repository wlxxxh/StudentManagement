@model IEnumerable<Student>
@{

    ViewBag.Title = "学生列表页面";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "~/images/" + (student.PhotoPath ?? "noimage.png");

    <div class="card m-3">
        <div class="card-header">
            <h3>@student.Name</h3>
        </div>
        <img class="card-img-top imageThumbnail" src="@photoPath"
             asp-append-version="true" />

        <div class="card-footer text-center">

            <a asp-controller="home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary m-1">查看</a>


            <a asp-controller="home" asp-action="edit" asp-route-id="@student.Id" class="btn btn-primary m-1">编辑</a>
            <a asp-controller="home" asp-action="delete" asp-route-id="@student.Id" class="btn btn-danger m-1">删除</a>
        </div>
    </div>
    }
</div>



